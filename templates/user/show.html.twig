{% extends 'base.html.twig' %}

{% block title %}Archer{% endblock %}

{% block body %}
    <h1>
        <em class="fa-solid fa-user"></em>
        {% if app.user == user %}
            Mon Profil
        {% else %}
            {{ user.fullname }}
        {% endif %}
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ user.birthdate|format_datetime('long', 'none', locale='fr') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">retour à la liste</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
